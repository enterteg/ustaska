*
  margin: 0
  font-size: 15px
  color: rgb(230,230,230)
  h1
    font-size: 2rem
  h2
    font-size: 1.8rem
    font-weight: normal
  h3
    font-size: 1.5rem
  &.nonpadding
    padding: 0 !important

body
  background-image url('./images/tlo3.jpg')
  background-size: cover
  background-color: black
  background-repeat: no-repeat
  background-attachment: fixed
  color: white
  font-family: 'Josefin Sans'
  font-weight: 300
  li
    margin-top: 15px
    font-size: 1.2rem
  ul
    &.disc
      list-style-type: square
    &.circle
      list-style-type: circle

  #container
    max-width: 1100px
    margin: 0 auto
    padding: 40px 50px 0px
    #top_bar
      display: flex
      flex-direction: row
      justify-content: space-between
      align-items: center
      #logo
        display: flex
        flex-direction: column
        float: left
        .title
          font-size: 4.3rem
          font-family: 'Aguafina Script', cursive;
          font-weight: 200
          letter-spacing: 4px
          height: 5.2rem
        .desc
          font-size: 1.8rem
          font-weight: 200
      #menu
        nav
          ul
            li
              padding: 15px
              list-decoration: none
              display: inline-block
              transition: 0.3s ease all
              a
                text-decoration: none
                font-size: 1.8rem
              &:hover
                cursor: pointer
                background-color: rgba(0,40,60,0.2)
                transition: 0.3s ease all
    #slider
      margin: 50px -45px 50px -45px
      display: flex
      flex-direction: row
      align-items: center
      ul
        li
          list-decoration: none
          display: inline
          padding: 5px
      .prev, .next
        color: rgba(250,250,250,0.1)
        font-size: 2rem
        padding: 10px
        &:hover
          cursor: pointer
          color: rgba(250,250,250,0.7)
      .slidesjs-stop, .slidesjs-play
        display: none !important

    section
      display: flex
      flex-direction: row
      justify-content: space-between
      margin-bottom: 40px
      font-family: 'Lato'
      #map
        height: 500px
        margin-top: 50px
        background-color: rgba(190,190,190,0.3)
      #section
        padding: 40px 60px
        flex: 0.48
        background-color: rgba(0,40,60,0.75)
        &.full
          margin-top: 50px
          flex: 1
        &.list
          padding: 30px 40px 40px
        header
          #header
            line-height: 2.5rem
            h2
              color: rgba(150,200,200,1)
        article
          #article
            padding: 30px 0 0
            i
              font-size: 1rem
              color: rgba(250,250,250,0.7)
            a
              font-size: 1.2rem
              text-decoration: none
              font-style: italic
              border: none !important
              color: rgba(250,220,220,1)
              object-fit: cover
              &:hover
                color: rgba(230,250,250,1)
                border-bottom: 1px solid rgba(250,250,250,0.3)
              img
                width: 19%
                margin: 0.5%
                opacity: 1
                &:hover
                  opacity: 0.8
            .contact
              justify-content: flex-end
              margin-right: 20px
              background-color: rgba(250,150,150,0.1)
              padding: 20px 30px
              .row
                display: flex
                flex: 1
                padding: 10px 0px
                justify-content: space-between
                align-items: center
                .info
                  font-size: 1.3rem
                  text-align: left
                  flex: 1
                  color: rgb(230,240,240)
                  line-height: 1.4rem
                i
                  padding: 0px 20px 0px 0px
                  width: 30px
                  font-size: 1.6rem
                  color: rgba(200,200,200,0.7)
                  text-align: center
            &.adress
              display: flex
              flex-direction: row
              justify-content: space-between
            p
              text-align: justify
              font-size: 1.2rem
              line-height: 1.4em
              letter-spacing: 1px
            > ul > li
              font-size: 1.5rem
              margin-top: 20px
              color: rgba(220,190,200,1)
            &.offer
              display: flex
              flex-wrap: wrap
              flex: 1
              justify-content: space-between
              .info-box
                padding: 35px
                background-color: rgba(250,250,250,0.15)
                width: 41%
                margin-bottom: 40px
                font-weight: 200
                &.padding
                  width: 40%
                  padding-left: 50px
                p
                  text-align: center
                  line-height: 1.15em
                  margin-bottom: 20px
                  color: rgb(210,210,210)
                  &.solid
                    color: rgba(250,250,250,1)
                    font-weight: bold
                    font-size: 1.2em
                    line-height: 1.4em
                .header
                  font-weight: 300
                  font-size: 1.6rem
                  line-height: 1.5em
                  &.margin
                    margin-top: 30px
                ul li
                  list-style-type: circle
                  color: rgba(250,250,250,0.9)
                  letter-spacing: 1px
                  line-height: 1.2em
                  ul li
                    list-style-type: disc
                i
                  font-size: 1.4rem
                  color: white
                &.right
                  .thumbnail
                    float: right
                    margin: 0px 0px 5px 20px
                .thumbnail
                  float: left
                  margin: 0px 20px 5px 0px
                  img
                    width: 180px
                    height: 150px
                    box-shadow: 0 0 20px rgba(0,0,0,0.2)
                    object-fit: cover;
                .text
                  .desc
                    text-align: justify
                    line-height: 1.5rem
                    letter-spacing: 1px
                    font-size: 1.05rem
                  .title
                    margin-bottom: 20px
                    font-size: 1.5rem
                    color: rgb(220,200,200)
                    letter-spacing: 0.5px
                    font-weight: 300
    footer
      #footer
        font-size: 1.3rem
        background-color: rgba(30,40,60,0.5)
        padding: 20px 40px
        display: flex
        align-items: flex-end
        justify-content: space-between
        .left
          a
            opacity: 0.8
            &:hover
              cursor: pointer
              opacity: 1
        .contact
          justify-content: flex-end
          margin-right: 20px
          .row
            display: flex
            flex: 1
            padding: 10px 0px
            justify-content: space-between
            align-items: center
            .info
              font-size: 1.3rem
              text-align: left
              flex: 1
              color: rgb(230,240,240)
              line-height: 1.4rem
            i
              padding: 0px 20px 0px 0px
              width: 30px
              font-size: 1.6rem
              color: rgba(200,200,200,0.7)
              text-align: center
